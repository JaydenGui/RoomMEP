<Window x:Class="CutMEPCurvesByMassEdges.MainForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CutMEPCurvesByMassEdges"
             mc:Ignorable="d" Title="Обрезать линейные объекты по формообразующим "
             Height="150" Width="200" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Margin="5"
                   Text="Имя масс-формы"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <TextBox
            Margin="5"
            Name="txtboxMassFormName"
                   Text="Прямоугольник-Сложный"
                   MinWidth="120"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="1"/>

        <Button 
            Margin="5"
            Grid.Row="2"
            Name="btnAccept" 
                Content="Применить" 
                Click="btnAccept_Click"/>
    </Grid>
</Window>
